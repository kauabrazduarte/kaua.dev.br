<script>
    const audio = new Audio("/sounds/ambient.mp3");

    function toggleSound() {
        if (audio.paused) {
            audio.loop = true;
            audio.play();
            soundElement.classList.add("purple");
        } else {
            audio.pause();
            soundElement.classList.remove("purple");
        }
    }

    const soundElement = document.getElementById("sound-button");

    if (soundElement) {
        soundElement.addEventListener("click", toggleSound);
    }
</script>
